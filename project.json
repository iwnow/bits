{
    "name": "workspace",
    "$schema": "node_modules/nx/schemas/project-schema.json",
    "targets": {
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "tag": "v{tag}",
                "preset": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "Features"
                        },
                        {
                            "type": "fix",
                            "section": "Bug Fixes"
                        },
                        {
                            "type": "chore",
                            "section": "Chores"
                        },
                        {
                            "type": "build",
                            "section": "Build System"
                        },
                        {
                            "type": "ci",
                            "section": "Continuous Integration"
                        },
                        {
                            "type": "docs",
                            "section": "Documentation"
                        },
                        {
                            "type": "style",
                            "section": "Styles"
                        },
                        {
                            "type": "refactor",
                            "section": "Code Refactoring"
                        },
                        {
                            "type": "perf",
                            "section": "Performance Improvements"
                        },
                        {
                            "type": "test",
                            "section": "Tests"
                        }
                    ]
                }
            }
        }
    },
    "tags": []
}